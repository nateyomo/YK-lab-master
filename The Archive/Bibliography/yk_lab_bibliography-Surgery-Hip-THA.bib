  pmcid = {PMC9533240},
  pmid = {36047458},
  keywords = {ambulatory,anaesthesia,Anesthesiologists,BMI,comorbidities,dizziness,inservice inp kaiser,logistic regression,physical therapy,Postoperative pain,postoperative pain score,same-day discharge,To Read,total hip arthroplasty,total hip arthroplasty (THA)},
