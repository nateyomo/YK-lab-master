  pmid = {35210145},
  keywords = {Arthroplasty Replacement Hip,Arthroplasty Replacement Knee,Bupivacaine,Case-Control Studies,Completed,complications,Dizziness,Female,Humans,Incidence,inservice inp kaiser,orthostasis,orthostatic intolerance,Orthostatic Intolerance,Postoperative Complications,Retrospective Studies,Risk Factors,same-day discharge,total hip arthroplasty,total knee arthroplasty},
