  pmid = {22174345},
  keywords = {Adult,Aged,Aged 80 and over,Analgesics Opioid,Anesthesia Spinal,Arthroplasty Replacement Hip,Cerebrovascular Circulation,Drug Administration Schedule,Early Ambulation,Female,Hemodynamics,Hemoglobins,Humans,Hypotension Orthostatic,inservice inp kaiser,Male,Middle Aged,Muscle Skeletal,Orthostatic Intolerance,Oxygen,Perioperative Care,Postoperative Care,Postoperative Hemorrhage,To Read},
