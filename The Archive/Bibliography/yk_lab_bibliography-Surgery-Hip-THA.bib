  title = {Orthostatic Intolerance during Early Mobilization after Fast-Track Hip Arthroplasty},
  author = {Jans, {\O} and {Bundgaard-Nielsen}, M. and Solgaard, S. and Johansson, P. I. and Kehlet, H.},
