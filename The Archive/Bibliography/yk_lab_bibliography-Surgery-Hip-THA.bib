  pmid = {30912466},
  keywords = {Adolescent,Adult,Aged,Aged 80 and over,Arthroplasty Replacement Hip,Female,Foot,Foot drop,Humans,Incidence,inservice inp kaiser,Male,Middle Aged,Peroneal Neuropathies,Postoperative Complications,Risk Factors,sciatic nerve,Sciatic Nerve,THA,To Read,United Kingdom,Young Adult}
