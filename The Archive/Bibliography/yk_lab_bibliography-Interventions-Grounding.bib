  pmid = {30448083},
  keywords = {Adult,Affect,Bodyworkers,Complementary Therapies,Earthing,Electrons,Fatigue,Female,Grounding,Humans,Male,Massage,Massage therapists,Middle Aged,Occupational Health,Occupational Stress,Pain,Physical Therapists,Quality of Life,Sleep,Sleep disorders,To Read}
