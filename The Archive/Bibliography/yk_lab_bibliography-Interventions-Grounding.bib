  pmcid = {PMC3154031},
  pmid = {21469913},
  keywords = {Adult,Blood Glucose,Blood Proteins,Copper,Diabetes Mellitus,Double-Blind Method,Earth Planet,Electricity,Electrolytes,Female,Geological Phenomena,Homeostasis,Human Body,Humans,Male,Middle Aged,Rest,Sleep,Thyroid Hormones,Thyrotropin,To Read,Young Adult},
